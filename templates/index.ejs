<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>backend masters</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/courses">Courses</a></li>
            <li class="nav-item"><a class="nav-link" href="/workshops">Workshops</a></li>
            <li class="nav-item"><a class="nav-link" href="/community">Community</a></li>
        </ul>
        <ul class="navbar-nav">
            <% if (sessionUser) { %>
                <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
            <% } %>
            <% if (sessionUser) { %>
                <li class="nav-item"><a class="nav-<h1>Q&A Page</h1>
                    <form action="/postQuestion" method="POST">
                        <label for="question">Ask a question:</label>
                        <textarea id="question" name="question" rows="4" cols="50"></textarea>
                        <br>
                        <button type="submit">Submit</button>
                    </form>
            
                    <h2>Questions:</h2>
                    <% questions.forEach(function(question) { %>
                        <div>
                            <h3><%= question.title %></h3>
                            <p><%= question.content %></p>
                            <form action="/postAnswer" method="POST">
                                <input type="hidden" name="questionId" value="<%= question.id %>">
                                <label for="answer">Your Answer:</label>
                                <textarea id="answer" name="answer" rows="4" cols="50"></textarea>
                                <br>
                                <button type="submit">Submit Answer</button>
                            </form>
                        </div>
                    <% }) %>link" href="/logout">logout</a></li>
            <% } %>
            <% if (!sessionUser) { %>
                <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
            <% } %>
        </ul>
    </nav>

    <% if (sessionUser) { %>
        <div class="container mt-5">
            <h1>Welcome to Backend Masters</h1>
            <p>Learn backend development with Node.js, Express, and MongoDB</p>
            <p>the count is <%= variable %></p>
        </div>
    <% } %>


    <% if (!sessionUser) { %>
        <div class="container mt-5">
            <h1>Welcome to Backend Masters</h1>
            <p>Learn backend development with Node.js, Express, and MongoDB</p>
            <p>join us now by logging in </p>
            <a class="btn btn-primary" href="/register">Register</a>
        </div>
    <% } %>
</body>
</html>